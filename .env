# Ollama Configuration (Local LLM - FREE, No API Keys Needed)
OLLAMA_ENABLED=true
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_MODEL=mistral
LLM_TEMPERATURE=0.7

# ============================================================
# YAHOO FINANCE CONFIGURATION (Live Stock Data)
# ============================================================
# Enable/disable Yahoo Finance as primary data source
USE_YAHOO_DATA=true

# Cache time-to-live in seconds (default: 1 hour)
YAHOO_CACHE_TTL=3600

# Default stock symbols to fetch (comma-separated)
YAHOO_SYMBOLS=AAPL,MSFT,GOOGL,AMZN,NVDA,TSLA,META,BRK-B,JNJ,V,WMT,JPM,PG,HD,MA

# ============================================================
# PostgreSQL Database Configuration
# ============================================================
# To enable PostgreSQL, uncomment and configure:
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/financial_rag

# Database connection settings for csv_to_sql.py ingestion script
DB_HOST=localhost
DB_PORT=5432
DB_NAME=financial_db
DB_USER=postgres
DB_PASSWORD=postgres

# For now, the app uses CSV data fallback (no database required)

# Vector Store Configuration
VECTOR_DB_DIR=./data/vectorstore

# Performance & Compatibility Fixes
# Fix for duplicate OpenMP runtimes (numpy+mkl conflict) - common with ML libraries
KMP_DUPLICATE_LIB_OK=TRUE
# Reduce OpenMP thread contention if needed
OMP_NUM_THREADS=4

# OpenAI - NOT USED (commented out to avoid fallback dependency)
# OPENAI_API_KEY=your_key_here
